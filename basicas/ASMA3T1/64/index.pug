include ../../assets/pug/_head
include ../../assets/pug/_scripts

- title = 'Transporte urbano'
- subtitle = ''

<!DOCTYPE html>
html(lang="es")
    +head
        style.
            .ex{
                background:#cde9f8;
            }
    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Observa la imagen y contesta: si las personas que están en la banqueta acaban de bajar del camión, ¿cuántas personas había en él?

            .row.mt-3.align-items-center.ex
                .col-md-8
                    img(src="i/a1.png").img-fluid
                .col-md.text-center
                    div Habían
                    inputbox(v-model="r[0]" :ref="refCount()" @isright="right++" :answer="10" type="number" placeh="#" initclass="ib2")
                    div personas.
            .row.mt-3.align-items-center.ex
                .col-md-8
                    img(src="i/a2.png").img-fluid
                .col-md.text-center
                    div Habían
                    inputbox(v-model="r[1]" :ref="refCount()" @isright="right++" :answer="10" type="number" placeh="#" initclass="ib2")
                    div personas.
            .row.mt-3.align-items-center.ex
                .col-md-8
                    img(src="i/a3.png").img-fluid
                .col-md.text-center
                    div Habían
                    inputbox(v-model="r[2]" :ref="refCount()" @isright="right++" :answer="10" type="number" placeh="#" initclass="ib2")
                    div personas.






            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
