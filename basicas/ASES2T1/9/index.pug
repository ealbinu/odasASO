    body
        #app.container.my-5.animate__animated.animate__fadeIn.animate__delay-1s
            h1 #{title}
            if subtitle.length>1
                h2 #{subtitle}

            .instruccion.mt-5 Observa la imagen con atencion y arrastra los objetos que se muestran en los recuadros al lugar correspondiente en la imagen.

            .recuadropalabras.dragdrop(v-if="tempsobj.options")
                dragdrop( :ref="refCount()" @isright="right++" :options="tempsobj.options")

            .row.mt-3.imagerelative(v-if="tempsobj.options")
                img(src="i/bg.png").img-fluid
                .items
                    template(v-for="(i, index) in tempsobj.options")
                        .item(:data="index+1" :data-img="tempsobj.options[index]"): dragdrop(initclass="common" v-model="r[index]" :ref="refCount()" @isright="right++" :options="[]" :options-ok="[tempsobj.options[index]]")

            





            finalize(@evaluate="finalizar" @reset="reset" :resultado="resultado" :right="right" :total="total")
