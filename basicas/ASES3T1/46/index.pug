                    .recuadropalabras.dragdrop.c1: dragdrop(:options="['<img src=\"i/e4.png\">']" :options-ok="[]")
                .col-4.text-center
                    img(src="i/a5.png").img-fluid.mt-1
                    .recuadropalabras.dragdrop.c1: dragdrop(:options="['<img src=\"i/e5.png\">']" :options-ok="[]")
                    


            .row.mt-3.text-center
                .col-4
                    img(src="i/k1.png").img-fluid
