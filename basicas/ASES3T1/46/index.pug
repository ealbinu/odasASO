            .row.mt-3.justify-content-center
                .col-4.text-center 
                    img(src="i/a1.png").img-fluid.mt-1
                    .recuadropalabras.dragdrop.c1: dragdrop(:options="['<img src=\"i/e1.png\">']" :options-ok="[]")
                .col-4.text-center
                    img(src="i/a2.png").img-fluid.mt-1
                    .recuadropalabras.dragdrop.c1: dragdrop(:options="['<img src=\"i/e2.png\">']" :options-ok="[]")
